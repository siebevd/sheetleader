# Use Bun for performance and Drizzle compatibility
FROM oven/bun:1.1

WORKDIR /app

# Copy the Drizzle project files
COPY . .

# Expose the Studio port
EXPOSE 4983

# Set environment (make sure DATABASE_URL is in .env)
ENV NODE_ENV=development

# Install drizzle-kit if not already in package.json
RUN bun add -g drizzle-kit

# Run Drizzle Studio
CMD ["bunx", "drizzle-kit", "studio", "--host", "0.0.0.0", "--port", "4983"]

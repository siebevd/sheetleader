{
    # Global options
    admin off
}

{$DOMAIN:localhost} {
    # Handle API requests
    handle /api/* {
        reverse_proxy backend:3000
    }

    # Handle Drizzle Studio
    handle /studio/* {
        reverse_proxy drizzle-studio:4983
    }

    # Serve frontend static files
    handle {
        root * /var/www/html
        try_files {path} /index.html
        file_server
    }

    # Enable compression
    encode gzip

    # Logging
    log {
        output stdout
        format console
    }
}
